    "/api/transactions": {
      "get": {
        "tags": ["Transactions"],
        "summary": "End-point to receive transactions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "intejer",
                          "example": 5
                        },
                        "result": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "date": {
                                "type": "string",
                                "description": "Date of transaction",
                                "example": "02.02.2022"
                              },
                              "month": {
                                "type": "string",
                                "description": "Month of transaction",
                                "example": "02"
                              },
                              "year": {
                                "type": "string",
                                "description": "Year of transaction",
                                "example": "2022"
                              },
                              "comment": {
                                "type": "string",
                                "description": "Comment of transaction",
                                "example": "food consumption"
                              },
                              "type": {
                                "type": "string",
                                "description": "Type of transaction",
                                "example": "spend"
                              },
                              "_id": {
                                "type": "string",
                                "description": "Transaction id.",
                                "example": "61267393875f21233cd848d2"
                              },
                              "owner": {
                                "type": "string",
                                "description": "User id.",
                                "example": "6125544d29cb0518347b1455"
                              },
                              "money": {
                                "type": "intejer",
                                "description": "the amount of costs",
                                "example": 500
                              },
                              "category": {
                                "type": "object",
                                "properties": {
                                  "_id": {
                                    "type": "string",
                                    "description": "Categoty id",
                                    "example": "6123a7cde3f3d91c10951e25"
                                  },
                                  "name": {
                                    "type": "string",
                                    "description": "Name of category",
                                    "example": "food"
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "description": " Service message",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Transactions"],
        "summary": "End-point to add transactions",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Transaction body",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["type", "category", "money"],
                "properties": {
                  "date": {
                    "type": "string",
                    "description": "date of transaction",
                    "example": "01.09.2021"
                  },
                  "month": {
                    "type": "string",
                    "description": "Month of transaction",
                    "example": "09"
                  },
                  "year": {
                    "type": "string",
                    "description": "Year of transaction",
                    "example": "2021"
                  },
                  "comment": {
                    "type": "string",
                    "description": "comment to transaction",
                    "example": ""
                  },
                  "type": {
                    "type": "string",
                    "description": "type of transaction(spend or income)",
                    "example": "income"
                  },
                  "category": {
                    "type": "string",
                    "description": "category of transaction(takes a category id)",
                    "example": "6123a7cde3f3d91c10951e25"
                  },
                  "money": {
                    "type": "integer",
                    "description": "spend or income sum",
                    "example": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "code": {
                      "type": "number",
                      "example": 201
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "result": {
                          "type": "object",
                          "properties": {
                            "date": {
                              "type": "string",
                              "description": "date of transaction",
                              "example": "01.09.2021"
                            },
                            "month": {
                              "type": "string",
                              "description": "month of transaction",
                              "example": "09"
                            },
                            "year": {
                              "type": "string",
                              "description": "year of transaction",
                              "example": "2021"
                            },
                            "comment": {
                              "type": "string",
                              "description": "comment to transaction",
                              "example": ""
                            },
                            "type": {
                              "type": "string",
                              "description": "type of transaction(spend or income)",
                              "example": "income"
                            },
                            "_id": {
                              "type": "string",
                              "description": "transaction id",
                              "example": "6128aef7ae8c0635d47093fd"
                            },
                            "owner": {
                              "type": "string",
                              "description": "user's id",
                              "example": "61266348626da3337cd530ff"
                            },
                            "category": {
                              "type": "string",
                              "description": "category of transaction(takes a category id)",
                              "example": "6123a7cde3f3d91c10951e25"
                            },
                            "money": {
                              "type": "integer",
                              "description": "spend or income sum",
                              "example": 1000
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "description": " Service message",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "description": " Service message",
                      "example": "Not Found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "description": " Service message",
                      "example": "Transaction validation failed"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/transactions/statistics": {
      "get": {
        "tags": ["Transactions"],
        "summary": "End-point to receive transactions statistacs. Can be filtered by month and year.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "month",
            "in": "query",
            "description": "month of transaction",
            "required": false,
            "type": "string"
          },
          {
            "name": "year",
            "in": "query",
            "description": "month of transaction",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfull operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalIncome": {
                          "type": "integer",
                          "description": "total income",
                          "example": 26000
                        },
                        "totalSpend": {
                          "type": "integer",
                          "description": "total spend",
                          "example": 7600
                        },
                        "categoriesSummary": {
                          "type": "object",
                          "description": "All categories",
                          "properties": {
                            "food": {
                              "type": "integer",
                              "description": "food expenses",
                              "example": 760
                            },
                            "car": {
                              "type": "integer",
                              "description": "car expenses",
                              "example": 1000
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "code": {
                      "type": "number",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "description": " Service message",
                      "example": "Unauthorized"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
